Options ExecCGI FollowSymLinks Includes
AddHandler cgi-script .pl

<IfModule mod_rewrite.c>
	RewriteEngine On

	RewriteRule ^install$ install.pl [L]

	RewriteRule ^styles/([^/]*)/personalization(_([0-9]+))?\.css$ core/scripts/styles.pl?cdlid=$1&cdln=personalization&cdlbc=&cdlfc=&cdllc=&cdlfs=$3&cdlls=&cdlws=&cdllh= [L]
	RewriteRule ^styles/([^/]*)/custom_([^_]*)_([^_]*)_([^\.]*)_([^\.]*)_([^\.]*)_([^\.]*)_([^\.]*)\.css$ core/scripts/styles.pl?cdln=custom&cdlid=$1&cdlbc=$2&cdlfc=$3&cdllc=$4&cdlfs=$5&cdlls=$6&cdlws=$7&cdllh=$8 [L]
	RewriteRule ^styles/([^/]*)/all\.css$ core/scripts/styles.pl?cdln=all&cdlid=$1 [L]
	RewriteRule ^styles/default\.css$ design/css/default.css [L]
	RewriteRule ^styles/ie\.css$ design/css/ie.css [L]
	RewriteRule ^styles/print\.css$ design/css/print.css [L]
	RewriteRule ^admin/config\.css$ design/css/config.css [L]

	RewriteRule ^javascript/title_(.*)_([0-9]+)\.js$ core/scripts/title.pl?cdlid=$1&cdls=$2 [L]

	RewriteRule ^javascript(-https)?/.*$ core/scripts/javascript.pl [L]

	RewriteRule ^(le-filtre(-https)?|fs?)(/.*)?$ core/scripts/index.pl [L]

	RewriteRule ^le-filtre-pour-ajax/.*$ core/scripts/index_for_ajax.pl [L]

	RewriteRule ^document(-https)?(/(ouvrir|telecharger))?/[^/]*/[^/]*/[^/]*/[^/]*/.*$ core/scripts/document.pl [L]

	RewriteRule ^acces-protege(-https)?/.*$ core/scripts/access_protected_site.pl [L]

	RewriteRule ^sortie(-https)?/.*$ core/scripts/exit_from_cdl.pl [L]

	RewriteRule ^audio/([^/]*)/(.*)$ core/scripts/audio.pl?cdlid=$1&cdlcontent=$2 [L]
	RewriteRule ^audio-download/([^/]*)/(.*)$ core/scripts/audio.pl?cdlid=$1&cdldownload=1&cdlcontent=$2 [L]
	RewriteRule ^audio-(document|exit|protected|error)/([^/]*)/(.*)$ core/scripts/audio.pl?cdlid=$2&cdlcontent=$3&cdlpagetype=$1 [L]
	RewriteRule ^audio-(voice|speed|help-[a-z]{2})-demo/([^/]*)/([^/]*)/([^/]*)$ core/scripts/audio.pl?cdlid=$2&cdldemo=1&cdltype=$1&cdlvoice=$3&cdlspeed=$4 [L]
	RewriteRule ^audio-text(-letter)?/([^/]*)/?$ core/scripts/audio.pl [L]

	RewriteRule ^admin(/.*)?$ core/scripts/config.pl [L]

	RewriteRule ^personnalisation-(affichage|avancee|audio|aide-audio|palette-couleurs-(b|f|l)|tailles-texte|audio-acces-direct|acces-direct)/.*$ core/scripts/personalization.pl [L]
	RewriteRule ^personnalisation$ core/scripts/personalization.pl [L]
</IfModule>
